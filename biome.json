{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"formatter": {
		"enabled": false,
		"indentStyle": "space"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
		  "style": {
		    "noCommaOperator": "off"
		  },
			"suspicious": {
				"noAssignInExpressions": "off"
			}
		}
	},
	"organizeImports": {
		"enabled": false
	}
}
